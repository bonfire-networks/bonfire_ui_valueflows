<div :if={e(@location, :name, nil)} class="relative pt-4 text-sm text-primary-content-600">
   <div class="flex items-center justify-between mb-2">
    <span class="block text-sm font-semibold tracking-wide text-primary-content-500">{l "Location"}</span>
  </div>
  <div class="p-2 bg-neutral-200 rounded dark:bg-neutral-700">
    <div class="text-sm text-primary-content-800 font-regular dark:text-primary-content-400">{e(@location, :name, "")}</div>
    <div class="text-sm text-primary-content-600 dark:text-primary-content-300 font-regular">{if e(@location, :name, "") != e(@location, :mappable_address, ""), do: e(@location, :mappable_address, "")}</div>
  </div>
</div>
